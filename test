      background: #f0f0f0;
    }

    .section.dark {
      background: #222;
      color: white;
    }

    #video-section {
      height: 5000px;
      position: relative;
    }

    #scroll-video {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      object-fit: cover;
      z-index: -1;
      pointer-events: none;
    }

    .video-text {
      position: fixed;
      top: 40px;
