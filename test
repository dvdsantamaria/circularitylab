<body>

  <div class="section">
    <h2>Welcome</h2>
  </div>

  <div class="section dark">
    <p>Scroll down to trigger the video-based parallax</p>
  </div>

  <section id="video-section">
    <video id="scroll-video" src="your-video.mp4" preload="auto" muted playsinline></video>
    <div class="video-text">Scroll-controlled video</div>
  </section>

  <div class="section">
    <h2>More Content Below</h2>
  </div>

  <div class="section dark">
    <p>You made it past the video section!</p>
  </div>

  <script>
    const video = document.getElementById("scroll-video");

    video.addEventListener("loadedmetadata", () => {
      const duration = video.duration;

      window.addEventListener("scroll", () => {
        const scrollTop = window.scrollY;
        const maxScroll = document.body.scrollHeight - window.innerHeight;
        const scrollFraction = scrollTop / maxScroll;
        video.currentTime = scrollFraction * duration;
      });
    });
  </script>
</body>
